{
  "type": "module",
  "name": "nook-desktop",
  "version": "1.0.10",
  "description": "Nook desktop",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "minify": "node scripts/minify.js",
    "dist": "npm run minify && env-cmd electron-builder",
    "release": "npm run minify && env-cmd electron-builder",
    "lint": "eslint ."
  },
  "author": {
    "name": "Foxof7207"
  },
  "license": "ISC",
  "build": {
    "extraResources": [
      "./build/icons/**"
    ],
    "afterSign": "build/notarize.js",
    "productName": "Nook",
    "appId": "com.foxof7207.nookdesktop",
    "files": [
      "index.js",
      "app/**",
      "node_modules/**"
    ],
    "asarUnpack": [
      "app/**"
    ],
    "asar": true,
    "artifactName": "${name}-${version}.${ext}",
    "mac": {
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}Setup.${ext}",
      "icon": "build/icons/nook.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.music"
    },
    "win": {
      "artifactName": "${productName}Setup.${ext}",
      "icon": "build/icons/nook.png",
      "target": [
        "nsis-web"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Audio",
      "icon": "build/icons",
      "maintainer": "Foxof7207"
    }
  },
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "installerIcon": "build/icons/nook.png",
    "uninstallerIcon": "build/icons/nook.png",
    "artifactName": "${productName}Setup.${ext}"
  },
  "dmg": {
    "icon": "build/icons/nook.icns",
    "sign": false
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "cssnano": "^7.1.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "eslint": "^9.26.0",
    "terser": "^5.46.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-json-storage": "^4.6.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "env-cmd": "^10.1.0",
    "superagent": "^10.3.0",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  }
}
